@using VacancyManagement.Domain
@model List<Vacancy>

@{
    ViewData["Title"] = "Aktiv Vakansiyalar";
}

<h2>@ViewData["Title"]</h2>

@if (Model == null || !Model.Any())
{
    <p>Aktiv vakansiya yoxdur.</p>
}
else
{
    <ul class="list-group">
        @foreach (var vacancy in Model)
        {
            <li class="list-group-item">
                <h4>@vacancy.Title</h4>
                <p>@Html.Raw(vacancy.Description.Replace("\n", "<br>"))</p>
                <a asp-controller="Vacancy" asp-action="Apply" asp-route-id="@vacancy.Id" class="btn btn-primary">Müraciət Et</a>
            </li>
        }
    </ul>
}
